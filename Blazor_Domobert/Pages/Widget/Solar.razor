@inject NotificationService NotificationService

@inject NotificationService NotificationService

<RadzenCard class="widget-solar" Visible="Device.IsVisible">
    <h4>@Device.Name</h4>
    <RadzenCard>
        <h3>Valeurs actuelles</h3>
        @if (currentData != null)
        {
            <p>Production actuelle : @currentData.production kW/h</p>
        }
        else
        {
            <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
            <p>Loading</p>
        }
    </RadzenCard>

    <RadzenChart Style="height: 400px;">
        <RadzenLineSeries Data="historyData" CategoryProperty="Timestamp" ValueProperty="production" Title="Kw/h" />
    </RadzenChart>
</RadzenCard>
